<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".DrinkSessionFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/truiton_image"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="265dp"
            android:src="@drawable/drink_session_logo"
            android:visibility="gone" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_alignTop="@+id/drink_list"
        tools:layout_editor_absoluteX="0dp" />
    <ListView
        android:id="@+id/drink_list"
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="118dp"
        android:visibility="gone"></ListView>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_alignBottom="@+id/drink_list"
        tools:layout_editor_absoluteX="0dp" />
        <TextView
            android:id="@+id/new_session_txt"
            android:layout_width="332dp"
            android:layout_height="134dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="159dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Start a new Drinking Session!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drink_list"
        android:layout_gravity="bottom|right"
        android:layout_marginStart="325dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/rendered_plus_icon"
        android:visibility="visible"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:maxImageSize="50dp"
        app:pressedTranslationZ="12dp" />

        <Button
            android:id="@+id/start_new_session"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="236dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="404dp"
            android:layout_marginEnd="81dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Start Session"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="gone" />

    <Button
        android:id="@+id/end_session_bttn"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="241dp"
        android:layout_height="55dp"

        android:layout_below="@+id/bac_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="End Drinking Session"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="136dp"
            android:layout_height="157dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="221dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/black"
            android:visibility="visible"
             />

    <TextView
        android:id="@+id/bac_text"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/drink_list"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="204dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Current BAC:"
        android:textSize="24sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bac_value"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/drink_list"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center_vertical"
        android:text="@string/bac_value"
        android:textAlignment="center"
        android:textSize="30sp"
        android:visibility="gone" />


    <Button
        android:id="@+id/refresh"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="13dp"
        android:background="@android:drawable/ic_popup_sync"
        android:gravity="right|bottom"
        android:visibility="gone" />

    <Button
        android:id="@+id/ride"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Need a Ride?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />


</RelativeLayout>
