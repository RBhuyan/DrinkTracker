<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnalyticsFragment">

    <View
        android:id="@+id/view2"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/drink_list"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp" />

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/truiton_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/analytics_logo"
        android:visibility="gone" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:title="Average BAC Per Session"

        app:seriesTitle="Sessions" />
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/graph"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/truiton_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Analytics"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/avg_drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="389dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Average Drinks Per Session"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/avg_drinks_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avg_drinks"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/avg_drinks"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textSize="18sp" />
    <View
        android:id="@+id/view4"
        android:layout_below="@+id/avg_drinks"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/avg_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:layout_alignStart="@+id/avg_drinks"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Average Volume Per Session"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/avg_vol_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:layout_alignEnd="@+id/avg_drinks_val"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp" />
    <View
        android:id="@+id/view5"
        android:layout_below="@+id/avg_vol"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/high_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5"
        android:layout_alignStart="@+id/avg_vol"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Highest Volume Consumed"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/highest_vol_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5"
        android:layout_alignEnd="@+id/avg_vol_val"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp" />
    <View
        android:id="@+id/view6"
        android:layout_below="@+id/high_vol"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="173dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="342dp"
        android:layout_marginTop="40dp"
        android:src="@android:drawable/stat_notify_sync"
        android:text="REFRESH" />

</RelativeLayout>